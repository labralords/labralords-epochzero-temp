{
  "name": "@labralords/api",
  "version": "0.0.1",
  "scripts": {
    "dev": "tsc-watch -b --onSuccess 'node dist/index.js'",
    "docker:build": "pnpm --silent --workspace-root pnpm-context -t services/api manifests/nodejs.Dockerfile | docker build --platform linux/amd64 --build-arg PACKAGE_PATH=services/api - -t labralords-api",
    "docker:start": "docker run --rm -i --name=labralords-api -p 3300:3000 -e NODE_ENV=development labralords-api",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "compile": "tsc --build",
    "build": "pnpm clean && pnpm compile",
    "release": "pnpm clean && pnpm compile",
    "format": "prettier '**/*.{js,ts,cjs}' --write --ignore-path ../../.gitignore",
    "format-check": "prettier --list-different '**/*.{js,ts,cjs}' --ignore-path ../../.gitignore",
    "lint": "eslint . --ext js,ts,cjs --config .eslintrc.cjs --ignore-path ../../.gitignore",
    "lint-fix": "pnpm lint -- --fix",
    "test": "echo \"No tests yet\"",
    "depcheck": "depcheck ."
  },
  "dependencies": {
    "@graphql-tools/schema": "^8.5.0",
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^20.2.2",
    "@labralords/common": "workspace:*",
    "@labralords/database": "workspace:*",
    "apollo-server-hapi": "^3.10.0",
    "config": "^3.3.7",
    "csv-parse": "^5.3.0",
    "csv-stringify": "^6.2.0",
    "date-fns": "^2.29.3",
    "date-fns-tz": "^1.3.7",
    "dotenv": "^16.0.1",
    "ethereumjs-util": "^7.1.5",
    "graphql": "^16.5.0",
    "hapi-pino": "^11.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/config": "^3.3.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.25",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.4",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.3"
  }
}
